<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.TicketAdd">

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Finalise" Clicked="Add_OnClicked"/>
        <ToolbarItem Order="Primary" Text="Cancel" Clicked="Back_Button"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Ticket Page!"
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="MerchandiserEntry" Placeholder="Merchandiser Number" Keyboard="Numeric"/>
            <Label Text="Due Date"/>
            <DatePicker x:Name="DueEntry" />
            <Entry x:Name="NotesEntry" Placeholder="Enter Notes"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>