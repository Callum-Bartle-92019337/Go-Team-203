<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.MenuHome">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator x:Name="actInd" IsVisible="False" HorizontalOptions="Center"/>
            <StackLayout x:Name="menuButtons">
                <Label Text="Welcome Company Project App!"
                       HorizontalOptions="CenterAndExpand" />
                <Button Text="Supervisor" Clicked="Supervisor_Button_OnClicked"/>
                <Button Text="Merchandiser" Clicked="Merchandiser_Button_OnClicked"/>
                <Button Text="Factory Reset Data" Clicked="Reset_Button_OnClicked"  BackgroundColor="DarkRed"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>