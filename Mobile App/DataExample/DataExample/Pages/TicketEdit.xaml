<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.TicketEdit">

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Finalise" Clicked="Edit_OnClicked"/>
        <ToolbarItem Order="Primary" Text="Cancel" Clicked="Back_Button"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Edit Ticket Page!"
                       HorizontalOptions="CenterAndExpand" />

                <Label Text="Merchandiser"/>
                <Entry x:Name="MerchandiserEntry" Text="{Binding Merchandiser}" Placeholder="{Binding Merchandiser}" Keyboard="Numeric"/>
                <Label Text="Due Date"/>
                <DatePicker x:Name="DueEntry" Date="{Binding DateDue}"/>
                <Label Text="Notes"/>
                <Entry x:Name="NotesEntry" Text="{Binding Notes}" Placeholder="{Binding Notes}"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>