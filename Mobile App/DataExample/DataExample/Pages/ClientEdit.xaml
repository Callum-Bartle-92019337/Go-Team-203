<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.ClientEdit">

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Finalise" Clicked="Edit_OnClicked"/>
        <ToolbarItem Order="Primary" Text="Cancel" Clicked="Back_Button"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit Client Page!"
                   HorizontalOptions="CenterAndExpand" />

            <Label Text="Client Name"/>
            <Entry x:Name="ClientNameEntry" Text="{Binding Name}"  Placeholder="{Binding Name}"/>

            <Label Text="Phone Number"/>
            <Entry x:Name="ClientPhoneEntry" Text="{Binding Number}" Placeholder="{Binding Number}" Keyboard="Telephone"/>

            <Label Text="Address"/>
            <Entry x:Name="ClientAddressEntry" Text="{Binding Address}" Placeholder="{Binding Address}"/>

            <Label Text="Email"/>
            <Entry x:Name="ClientEmailEntry" Text="{Binding Email}" Placeholder="{Binding Email}" Keyboard="Email"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>