<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.ActivityDisplay">

    <ContentPage.Content>
        <Grid>
            <Image Source="background.png" Aspect="AspectFill" />
            <ScrollView>
                <StackLayout Opacity="1">
                    <Frame Margin="2" Padding="2" Opacity="0.6">
                        <Label Text="{Binding Title}" Font="Bold, Large" />
                    </Frame>
                    <Image Source="{Binding Photo} " />
                    <Frame Margin="3" Padding="4" Opacity="0.6">
                        <Label Text="{Binding Content}" />
                    </Frame>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>