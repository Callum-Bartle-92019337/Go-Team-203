<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataExample.Pages.MenuHome">


    <ContentPage.Content>
        <Grid>
            <Image Source="background.jpg" Aspect="AspectFill"/>
            <StackLayout>
                <ActivityIndicator x:Name="actInd" IsVisible="False" HorizontalOptions="Center"/>
                <Label Text="Culture Master" HorizontalOptions="CenterAndExpand" Font="Italic, Bold, Large" TextColor="{Binding ColorTx1}"/>
                <Image Source="logo.png" />
                <Button Text="Activities" Clicked="Activities_Button_OnClicked" BackgroundColor="{Binding ColorBg1}" Grid.Row="2" TextColor="{Binding ColorTx1}" HeightRequest="40" BorderRadius="20" FontFamily="{Binding Font1}" FontSize="{Binding FontMed}"/>
                <Button Text="Phrases" Clicked="Phrases_Button_OnClicked" BackgroundColor="{Binding ColorBg1}" Grid.Row="4" TextColor="{Binding ColorTx1}" HeightRequest="40" BorderRadius="20" FontFamily="{Binding Font1}" FontSize="{Binding FontMed}"/>
                <Button Text="New Button" Clicked="New_Button_OnClicked" BackgroundColor="{Binding ColorBg1}" Grid.Row="5" TextColor="{Binding ColorTx1}" HeightRequest="40" BorderRadius="20" FontFamily="{Binding Font1}" FontSize="{Binding FontMed}"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>